    <form class="auth" method="POST" action="/join">
        <fieldset>
            <legend>Регистрация</legend>
            <label for="firstName" class="search-label">Имя:</label>
            <input class="name" type="text" id="name2" name="firstName" placeholder="Имя" required>
            <label class="search-label" for="lastName">Фамилия:</label>
            <input class="surname" type="text" id="surname2" name="lastName" placeholder="Фамилия" required>
            <label class="search-label" for="middleName">Отчество:</label>
            <input class="Lastname" type="text" id="Lastname2" name="middleName" placeholder="Отчество" required>
            <label class="search-label" for="typeWorker">Профессия:</label>
            <input class="Lastname" type="text" id="Lastname2" name="typeWorker" placeholder="Профессия" required>
            <label class="search-label" for="brigadenum">Номер бригады:</label>
            <input class="Lastname" type="text" id="Lastname2" name="brigadenum" placeholder="Профессия" required>
            <label class="reg-label" for="username">Логин:</label>
            <input class="login" type="text" id="login" name="username" placeholder="E-mail" required>
            <label class="reg-label" for="password">Пароль:</label>
            <input class="password" type="password" id="password" name="password" placeholder="Пароль" required><br>
            <button class="button" type="submit">Зарегистрироваться</button>
        </fieldset>
    </form>
    <a href="/login">Есть аккаунт?</a>
